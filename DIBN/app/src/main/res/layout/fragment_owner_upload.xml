<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shadow"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="상품 등록하기"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingBottom="10dp"/>
    </LinearLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="15dp">
                <TextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상품 사진 등록"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/picture"
                    android:layout_marginBottom="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"/>
                <TextView
                    android:gravity="center"
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상품 정보 입력"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginVertical="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상품 이름"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="10dp"/>

                <EditText
                    android:id="@+id/goods_name"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_edittext"
                    android:hint=" 이름을 입력해주세요"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카테고리"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="10dp"/>

                <EditText
                    android:id="@+id/category"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_edittext"
                    android:hint="카테고리 선택"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아티스트"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="10dp"/>

                <EditText
                    android:id="@+id/artist"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_edittext"
                    android:hint="아티스트 입력"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가격"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="10dp"/>

                <EditText
                    android:id="@+id/goods_price"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_edittext"
                    android:hint="가격을 입력해주세요"
                    android:textColor="@color/black"
                    android:inputType="number"/>

                <TextView
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="예상 제작 기간"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/goods_period"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="최소 1일"
                        android:inputType="number"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지갑 암호"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="10dp"/>

                <EditText
                    android:id="@+id/nft_password"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_edittext"
                    android:hint="NFT 발행을 위한 암호를 입력해주세요"
                    android:textColor="@color/black"
                    android:inputType="textPassword"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상품 설명"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginVertical="10dp"/>

                <EditText
                    android:id="@+id/description"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="@drawable/search_edittext"
                    android:hint="제품 설명을 해주세요"
                    android:textColor="@color/black"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_gravity="center"
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_pressed"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="20dp"
                    android:text="등록하기"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>

                </LinearLayout>


