<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SignFragment"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/previous"
                    />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="상품 등록하기"
                    android:textSize="24sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="상품 사진 등록"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/picture"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="174dp"
                android:layout_marginBottom="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="104dp" />
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="상품 정보 입력"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="266dp" />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="상품 이름"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="328dp" />

            <EditText
                android:layout_width="360dp"
                android:layout_height="47dp"
                android:background="@drawable/edit"
                android:hint=" 이름을 입력해주세요"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="360dp" />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="카테고리"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="423dp" />

            <TextView
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/viewbtn"
                android:text="카테고리 선택 >"
                android:textSize="18sp"
                />


            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="아티스트"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="500dp" />

            <TextView
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/viewbtn"
                android:text="아티스트 선택 >"
                android:textSize="18sp"
                />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="태그"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="600dp" />

            <EditText
                android:layout_width="360dp"
                android:layout_height="47dp"
                android:background="@drawable/edit"
                android:hint=" # 태그"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="360dp" />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="가격"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="650dp" />

            <EditText
                android:layout_width="360dp"
                android:layout_height="47dp"
                android:background="@drawable/edit"
                android:hint=" 가격을 입력해주세요"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="360dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:layout_width="360dp"
                android:layout_height="47dp"
                android:background="@drawable/edit"
                android:hint=" 배송비를 입력해주세요"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="360dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="예상 제작 기간"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="650dp" />

            <LinearLayout
                android:layout_width="200"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:hint="최소 1일"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="~"
                    android:gravity="center"/>

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="3"
                    android:hint="최대 14일"/>

            </LinearLayout>


           <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="옵션 추가"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="650dp" />

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="상세 정보"
                android:textSize="16sp"
                tools:layout_editor_absoluteX="26dp"
                tools:layout_editor_absoluteY="650dp" />

            <EditText
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:background="@drawable/edit"
                android:hint=" 주문자에게 필요한 정보를 작성해주세요.\n"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="360dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>